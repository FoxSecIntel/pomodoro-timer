{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0.1",
  "description": "A 20-minute Pomodoro timer with start, pause, and reset features.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "alarms", "background"],
  "background": {
    "service_worker": "background.js"
  }
}

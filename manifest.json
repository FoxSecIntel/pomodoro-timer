{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.1.1",
  "description": "A reliable Pomodoro timer with start, pause, reset, custom focus duration, and break mode.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "alarms", "notifications"] ,
  "background": {
    "service_worker": "background.js"
  }
}
